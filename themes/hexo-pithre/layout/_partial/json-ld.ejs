<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "Website",
    "url": "<%= config.url %>",
    "name": "Bravokeyl",
    "alternateName": "Double Pithre"
  }
</script>
<% if(is_post()) { %>
<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "BlogPosting",
    "mainEntityOfPage": "<%= data.permalink %>",
    "headline": "<%= data.title %>",
    "datePublished": "<%= data.date.format() %>",
    "dateModified": "<%= data.updated.format() %>",
    "description": "<%= data.description %>",
    "proficiencyLevel": "Beginner",
    "author": {
      "@type": "Person",
      "name": "bravokeyl",
      "url": "https://bravokeyl.com",
      "sameAs": [
        "https://www.facebook.com/bravokeyl",
        "https://github.com/bravokeyl",
        "https://www.linkedin.com/in/bravokeyl",
        "https://plus.google.com/+bravokeyl"
      ]
    },
    "image": {
      "@type": "ImageObject",
      "url": "<%= config.url + image %>",
      "height": 300,
      "width": 700
    },
    "publisher": {
      "@type": "Organization",
      "name": "Mu Bit",
      "logo": {
        "@type": "ImageObject",
        "url": "https://bravokeyl.com/mu-bit.png",
        "width": 60,
        "height": 60
      }
    }
  }
</script>
<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [<%- pithre_cat(page,0) %>]
  }
</script>
<% }%>

<% if(is_category()) { %>
<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [<%- pithre_cat(page,1) %>]
  }
</script>
<% }%>
